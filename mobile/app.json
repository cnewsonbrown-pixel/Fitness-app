{
  "expo": {
    "name": "FitStudio",
    "slug": "fitstudio",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fitstudio.app",
      "infoPlist": {
        "NSCameraUsageDescription": "FitStudio needs camera access to scan QR codes for class check-in",
        "NSPhotoLibraryUsageDescription": "FitStudio needs photo library access to update your profile picture"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.fitstudio.app",
      "permissions": ["CAMERA", "VIBRATE", "RECEIVE_BOOT_COMPLETED"]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow FitStudio to access your camera for QR code check-in"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff"
        }
      ]
    ],
    "scheme": "fitstudio",
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
